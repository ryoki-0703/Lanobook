<div class="profile-container">
  <h3 class="profile-name"><%= @customer.name %></h3>

</div>
<% if @customer.id == current_customer.id %>
  <p><%= link_to "プロフィール編集", edit_customers_customer_path(@customer) %></p>
<% end %>

<% @books.each do |book| %>
<div>
  <%= link_to customers_book_path(book.id) do %>
    <%= attachment_image_tag book, :image, size: "100x100" %>
  <% end %>
  <p>ユーザー画像</p>
  <p>タイトル：<%= book.name %></p>
  <p>ユーザーネーム：<%= book.customer.name %></p>
</div>
<% end %>
<%= paginate @books %>