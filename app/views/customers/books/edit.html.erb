<h4>投稿編集画面</h4>
<%= form_with model:@book, url: customers_book_path{@book.id}, local:true do |f| %>
  <h4>画像</h4>
  <%= f.file_field :image, id:"book-image" %>
  <h4>タイトル</h4>
  <%= f.text_field :name, class:"books-string", id:"book-name" %>
  <h4>説明</h4>
  <%= f.text_area :introduction %>
  <%= f.submit '保存' %>
<% end %>