<!DOCTYPE html>
<html>
  <head>
    <title>LanoBook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if customer_signed_in? %>
      <li><%= link_to '投稿', new_customers_book_path %></li>
      <li><%= link_to "投稿一覧", customers_books_path %></li>
      <li><%= link_to "ログアウト", destroy_customer_session_path, method: :delete  %></li>
    <% else %>
      <li><%= link_to "ログイン", new_customer_session_path %></li>
      <li><%= link_to "新規登録", new_admin_registration_path %></li>
    <% end %>  <%= yield %>
  </body>
</html>